<body>
  <h1>CS2 Кейсы</h1>
  <button onclick="openCase()">Открыть кейс</button>
  <div class="drop-result" id="result"></div>

  <script>
    const items = [
      "★ Нож",
      "AK-47 | Redline",
      "AWP | Asiimov",
      "M4A1-S | Hyper Beast",
      "P250 | Sand Dune",
      "USP-S | Kill Confirmed"
    ];

    function openCase() {
      const drop = items[Math.floor(Math.random() * items.length)];
      document.getElementById("result").innerText = "Выпало: " + drop;
    }
  </script>
